{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "api/*": ["src/api"],
      "components/*": ["src/components/*"],
      "constants/*": ["src/constants/*"],
      "contexts/*": ["src/contexts/*"],
      "hooks/*": ["src/hooks/*"],
      "navigation/*": ["src/navigation/*"],
      "screens/*": ["src/screens/*"],
      "store/*": ["src/store/*"],
      "theme": ["src/theme"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"]
    }
  }
}
